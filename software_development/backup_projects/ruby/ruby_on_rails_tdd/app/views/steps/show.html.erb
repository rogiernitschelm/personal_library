<div class="row">

  <div class="col s12 m12 l12">
    <div class="card large">
      <div class="container">
        <h3 class="red-text text-lighten-1">step: <%= @step.step_number %></h3>

        <p class="light grey-text text-darken-3">step: <%= @step.description %></p>

        <code>code: <%= @step.code %></code>

        <div class="card-action grey lighten-3">

            <%= link_to "edit step", edit_step_path( @step.id ), class: "btn-large waves-effect waves-light white-text red lighten-1 center" %>
            <%= link_to "new step", new_step_path( @step.id ), class: "btn-large waves-effect waves-light white-text red lighten-1 center" %>

        </div>

      </div>
    </div>
  </div>

</div>
