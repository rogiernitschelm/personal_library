<div class="container">

  <div class="row">

    <div class="col-md-6 form-box">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


        <div class="field devise-field">
          <label for="email">
            <%= f.email_field :email, autofocus: true, placeholder: "e-mail adress", autocomplete: "on"%>
          </label>
        </div>

        <div class="field devise-field">
          <label for="name">
            <%= f.text_field :name, placeholder: "your name", autocomplete: "on"%>
          </label>
        </div>

        <div class="field devise-field birthdate">
          <label for="birthdate">
            <%= f.date_field :birth_date, placeholder: "your birthdate", autocomplete: "on"%>
          </label>
        </div>

        <div class="field devise-field ">
          <label for="gender">
            <%= f.text_field :gender, placeholder: "your gender", class: "form-control" %>
          </label>
        </div>

        <div class="field devise-field">
          <label for="password">
            <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
          <label>
        </div>

        <div class="field devise-field">
          <label for="password_confirmation">
            <%= f.password_field :password_confirmation, placeholder: "password confirmation", autocomplete: "off" %>
          </label>
        </div>

        <div class="field devise-field actions">
          <%= f.submit "Hit me", class: "ghost-button ghost-button-small"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

  </div>

</div>
