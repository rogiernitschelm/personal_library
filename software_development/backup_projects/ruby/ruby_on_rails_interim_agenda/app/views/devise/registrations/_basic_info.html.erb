<div class="field">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, class: "devise-field" %>
</div>

<div class="field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, class: "devise-field" %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, class: "devise-field" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field">
  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, autocomplete: "off", class: "devise-field" %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "devise-field" %>
</div>
