<div class="row">

  <div class="col s12 m12 l12">
    <div class="card small">
      <div class="container">
        <h3 class="red-text text-lighten-1"><%= @tutorial.language.name %> | <%= @tutorial.title %></h3>

        <p class="card-content light grey-text text-darken-3"><%= @tutorial.description %></p>

        <div class="card-action grey lighten-3">


        </div>

      </div>
    </div>
  </div>

</div>

<div class="row">

  <% @tutorial.steps.each do |step| %>

  <div class="col s12 m12 l12">
    <div class="card small">
      <div class="container">

      <h4 class="red-text text-lighten-1">step number <%= step.step_number %></h4>
      <p><%= step.description %></p>
      <p><code><%= step.code %></code></p>

        <div class="card-action grey lighten-3">
        <%= link_to "step number #{step.step_number}", step_path(step.id), class: "btn-large waves-effect waves-light white-text red lighten-1 center" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<ul class="no-bullets">
  </ul>

<div class="row">
  <div class="col s12 m6 l6">
    <div class="icon-block">
      <%= link_to "add step", new_step_path( @tutorial.id ), class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>
      <%= link_to "edit tutorial", edit_tutorial_path( @tutorial.id ), class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>
      <%= link_to "back to tutorials", tutorials_path, class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>
      <%= link_to link_to "new tutorial", new_tutorial_path, class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>
    </div>
  </div>
</div>
