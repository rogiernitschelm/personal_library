<div class="row">
  <div class="col s12">
    <h2>Sign up</h2>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <!-- name info -->

      <div class="basic_info_form"><%= render partial: 'basic_info', locals: {f: f} %></div>

      <!-- select the type of user -->

      <div class="field browser-default">
        <%= f.label :type, class: "browser-default" %><br />
        <%= f.select :type, options_for_select(%w[Freelancer Employer]), id: 'select_type', class: "browser-default" %>
      </div><br />

      <!-- render either employer or freelancer partial -->

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= render "devise/shared/links" %>
  </div>
</div>
