<!DOCTYPE html>
<html>
  <head>
    <title>MyShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Raleway:400,700,600,500,300' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.braintreegateway.com/web/3.0.1/js/client.min.js' %>

  </head>

  <body>

    <%= render 'shared/header' %>

    <%= render 'shared/message' %>

    <div class="main-container">

      <%= yield %>

    </div>

    <%= render 'shared/footer' %>

  </body>
</html>
