<div class="row">

  <div class="col s12 m12 l11">
    <div class="card large">
      <div class="container">
        <h1><i class="<%= @language.fonticon %>"></i></h1>

        <h3 class="center grey-text"><%= link_to @language.name, language_path(@language.id) %></h3>
        <br>
        <h5 class="card-reveal grey-text text-darken-3"><%= @language.feature %></h5>
        <p class="grey-text light text-darken-3 card-content"><%= @language.description %></p>

        <div class="card-action grey lighten-3">
          <% @language.tutorials.each do |tutorial| %>
            <li class="inline-list"><%= link_to tutorial.title, tutorial_path(tutorial.id), class: "ghost-button-small" %></li>
          <% end %>
        </div>

      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col s12 m6 l6">
    <div class="icon-block">

      <%= link_to "edit language", edit_language_path( @language.id ), class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>
      <%= link_to "delete language", language_path( @language.id ), class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center", method: :delete, data: {confirm: "Do you wish to delete #{@language.name}?"} %>
      <%= link_to "back to languages", languages_path, class: "small-margin btn-large waves-effect waves-light white-text red lighten-1 center" %>

    </div>
  </div>
</div>

<ul class="no-bullets">
  </ul>
